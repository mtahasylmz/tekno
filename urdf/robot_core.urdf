<?xml version="1.0"?>
<robot xmlns:xacro="https://www.ros.org/wiki/xacro" name="robot">

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <!-- BASE LINK -->
    
    <link name="base_link">
    
  </link>

    <!-- CHASSIS LINK -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="0.1 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.03 0 0.075" rpy="0 0 0"/>
            <geometry>
                <box size="0.35 0.31 0.15"/>
            </geometry>
            <material name="white"/>
        </visual>

        <collision>
            <origin xyz="0.15 0 0.075" rpy="0 0 0"/>
            <geometry>
                <box size="0.35 0.31 0.15"/>
            </geometry>
            <material name="white"/>
        </collision>
        <inertial>
      <mass value="5.0"/>
      <inertia ixx="0.02" ixy="0" ixz="0" iyy="0.02" iyz="0" izz="0.02"/>
    </inertial>
    </link>

        <!--left wheel-->
    <link name="left_wheel_link">
    <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.01" />
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001" />
    </inertial>

    <visual>
      <origin xyz="0 0 0" rpy="0 1.57 1.57" />
      <geometry>
        <cylinder radius="0.036" length="0.024" />
      </geometry>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 1.57 1.57" />
      <geometry>
        <cylinder radius="0.036" length="0.024" />
      </geometry>
    </collision>
    </link>

   <joint name="left_wheel_joint" type="continuous">
      <origin xyz="0 0.13 0.015" rpy="0 0 0" />
      <parent link="base_link" />
      <child link="left_wheel_link" />
      <axis xyz="0 1 0" />
    </joint>
    
    <!--right wheel-->
    <link name="right_wheel_link">
    <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.01" />
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001" />
    </inertial>

    <visual>
      <origin xyz="0 0 0" rpy="0 1.57 1.57" />
      <geometry>
        <cylinder radius="0.036" length="0.024" />
      </geometry>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 1.57 1.57" />
      <geometry>
        <cylinder radius="0.036" length="0.024" />
      </geometry>
    </collision>
    </link>

   <joint name="right_wheel_joint" type="continuous">
      <origin xyz="0 -0.13 0.015" rpy="0 0 0" />
      <parent link="base_link" />
      <child link="right_wheel_link" />
      <axis xyz="0 1 0" />
    </joint>
    
    
    <!-- end of wheels-->
    <link name="rear_wheel_link">
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.001" />
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0"
        iyy="0.0001" iyz="0.0" izz="0.0001" />
    </inertial>

    <visual>
      <origin xyz="0.25 0 0" rpy="0 1.57 1.57"/>
      <geometry>
        <sphere radius="0.021" />
      </geometry>
    </visual>

    <collision>
      <origin xyz="0.25 0 0" rpy="0 1.57 1.57" />
      <geometry>
        <sphere radius="0.021" />
      </geometry>
    </collision>
    </link>
    <joint name="rear_castor_joint" type="fixed">
      <origin xyz="0 0 0.0" rpy="0 0 0"/>
      <parent link="base_link"/>
      <child link="rear_wheel_link"/>
      <axis xyz="0 1 0"/>
    </joint>






    <gazebo>
    <plugin name="differential_drive_controller" filename="libgazebo_ros_diff_drive.so">
      <ros>
        <namespace>/robot</namespace>
        <remapFrom>cmd_vel</remapFrom> <remapTo>/cmd_vel</remapTo>
      </ros>
      <leftJoint>left_wheel_joint</leftJoint>
      <rightJoint>right_wheel_joint</rightJoint>
      <wheelSeparation>0.3</wheelSeparation>
      <wheelDiameter>0.1</wheelDiameter>
      <torque>10</torque>
    </plugin>
    <plugin name="gazebo_ros_lidar_plugin" filename="libgazebo_ros_lidar.so">
      <ros>
        <namespace>/robot</namespace>
        <remapFrom>scan</remapFrom> <remapTo>/scan</remapTo>
      </ros>
      <frameName>lidar_link</frameName>
    </plugin>
  </gazebo>

  <gazebo>
    <plugin name="wind_plugin" filename="libgazebo_ros_wind.so">
      <robotNamespace>/robot</robotNamespace>
      <topicName>wind</topicName>
      <frameName>base_link</frameName>
      <windDirection>0 1 0</windDirection>  <!-- Wind blowing in Y direction -->
      <windForceMean>5</windForceMean>  <!-- Mean wind force -->
      <windForceVariance>1</windForceVariance>  <!-- Variance in wind force -->
    </plugin>
  </gazebo>

</robot>