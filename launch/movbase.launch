<launch>
  <!-- Arguments -->
 
  <arg name="map_file" default="$(find tekno)/maps/map.yaml"/>
  <arg name="move_forward_only" default="false"/>


  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

  <!-- AMCL -->
  <include file="$(find tekno)/launch/amcl.launch"/>

  <!-- move_base -->
  <include file="$(find tekno)/launch/move_base.launch">
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>

</launch>